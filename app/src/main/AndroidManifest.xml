    package="tech.hamid.android_internship_assessment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android_Internship_Assessment">
        <activity
            android:name=".ProNameActivity"
            android:exported="true"
            android:label="@string/screen3"/>
        <activity
            android:name=".DescImgActivity"
            android:exported="true"
            android:label="@string/screen2"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/screen1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>